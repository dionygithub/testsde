{% if data['curiosidades']|length > 0 %}


    <!--Section: More-->
    <section>

        <h2 class="font-weight-bold text-center dark-azul-fuerte-text pb-2">Curiosidades</h2>
        <hr class="w-header hr-fucsia my-4">
        <!--First row-->
        <div class="row features-small mt-5 wow fadeIn">

            {% for index, curio in data['curiosidades'] %}

                    <!--Grid column-->
                    <div class="col-xl-3 col-lg-6">
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-2">
                                <i class="fas fa-{{ curio.icono }} fa-2x mb-1 indigo-text" aria-hidden="true"></i>
                            </div>
                            <div class="col-10 mb-2 pl-3">
                                <h5 class="feature-title font-bold mb-1">{{ curio.name }}</h5>
                                <p class="grey-text mt-2">{{ curio.decrip }}
                                </p>
                            </div>
                        </div>
                        <!--/Grid row-->
                    </div>
                    <!--/Grid column-->
            {% endfor %}
        </div>
    </section>
    <!--Section: More-->

{% endif %}