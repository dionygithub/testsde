{% if data['show_perfil'] != false %}
    <div class="row justify-content-md-center justify-content-lg-end mb-2">
        <div class="row">
            <div class="col-lg-4 col-md-12 d-flex mb-2 align-items-center">
                <div class="avatar w-100 white d-flex justify-content-center align-items-center">
                    <img
                            src="{{ data['user'].imagen }}"
                            class="img-fluid z-depth-1"
                            alt="woman avatar"
                    />
                </div>
            </div>
            <div class="col-lg-8 col-md-12 text-muted d-flex flex-column justify-content-end pt-2" style="padding-left: 30px">
                <p class="mb-1"><strong>{{ data['user'].name }}</strong></p>
                <p class="mb-1"><i><a href="{{ data['user'].url }}"> Perfil</a></i></p>
            </div>
        </div>
    </div>
{% endif %}
<section>
    <!--Grid row-->
    <div class="row">

        {% for index, action in data['data'] %}
            <!--Grid column-->
            <div class="col-lg-3 col-md-6 mb-4">

                <a href="{{ action['url'] }}">
                    <div class="media white z-depth-1 rounded {{ action['active'] }}">
                        <i class="far {{ action['icono'] }} fa-lg {{ action['color'] }} z-depth-1 p-4 rounded-left text-white mr-3"></i>
                        <div class="media-body p-1">
                            <p class="text-uppercase text-muted mb-1">
                                <small>{{ action['name'] }}</small>
                            </p>
                            <h5 class="font-weight-bold mb-0">{{ action['data'] }}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}


    </div>
    <!--Grid row-->

</section>
