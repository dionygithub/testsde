<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<!-- Add you custom twig html here -->
<div class="row text-left">

    <!--Grid column-->
    <div class="col-md-6 mb-4 pb-5 mt-5">

        <div class="card">
            <div class="card-body">
                <form class="unete-login-from" enctype="multipart/form-data" action="{{ data['urlLoginUser'] }}" method="post" id="user-login-form" accept-charset="UTF-8">
                    <!--Header-->
                    <div class="form-header default-color">
                        <h3>
                            <i class="fas fa-lock"></i> Iniciar Sesión:</h3>
                    </div>

                    <!--Body-->
                    <div class="md-form">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="text" name="mail" id="defaultForm-email" class="form-control">
                        <label for="defaultForm-email">Correo electrónico</label>
                    </div>

                    <div class="md-form">
                        <i class="fas fa-lock prefix grey-text"></i>
                        <input type="password" name="pass" id="defaultForm-pass" class="form-control">
                        <label for="defaultForm-pass">Contraseña</label>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-default waves-effect waves-light">Iniciar</button>
                    </div>
                </form>

            </div>

            <!--Footer-->
            <div class="modal-footer">
                <div class="options">
                    <p>
                        <a href="{{ data['urlPassUser'] }}">¿Olvidaste la contraseña?</a>
                    </p>
                </div>
            </div>
        </div>

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-md-6 mb-4 mt-5">

        <!--Form with header-->
        <div class="card">
            <div class="card-body">

                <!--Header-->
                <div class="form-header peach-gradient">
                    <h3>
                        <i class="fas fa-user"></i> Registrate:</h3>
                </div>
                <form class="unete-register-from" enctype="multipart/form-data" action="{{ data['urlRegistroUser'] }}" method="post" id="user-register-form" accept-charset="UTF-8">
                    <!--Body-->
                    <div class="md-form">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" name="fullname" id="orangeForm-name" class="form-control">
                        <label for="orangeForm-name">Nombre completo</label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="text" required name="email" id="orangeForm-email" class="form-control">
                        <label for="orangeForm-email">Correo electrónico</label>
                    </div>

                    <div class="md-form">
                        <i class="fas fa-lock prefix grey-text"></i>
                        <input type="password" required name="pass" id="orangeForm-pass" class="form-control">
                        <label for="orangeForm-pass">Contraseña</label>
                    </div>

                    <div class="md-form">
                        <div class="g-recaptcha" data-sitekey="6LdmS-UUAAAAAMSUdVw5vRn0_J6jzCNp8BxfIrju">
                        </div>
                        <span id="captcha_error" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button  class="btn btn-deep-orange waves-effect waves-light">Unete</button>
                    </div>
                </form>
            </div>
        </div>
        <!--/Form with header-->

    </div>
    <!--Grid column-->

</div>