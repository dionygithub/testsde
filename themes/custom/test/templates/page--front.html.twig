      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">


        <ul class="navbar-nav mr-auto">
          {% for index, cat in list_categorias %}

            <li class="nav-item">
              <a href="{{ cat.path }}" class="nav-link">{{ cat.name }}</a>
