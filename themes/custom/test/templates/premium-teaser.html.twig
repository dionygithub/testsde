<!-- Card Dark -->
<div class="card">

    <!-- Card image -->
    <div class="view overlay">
        <img class="card-img-top"
             src="https://mdbootstrap.com/img/Photos/Horizontal/Work/4-col/img%20%2821%29.jpg"
             alt="Card image cap">
    </div>

    <!-- Card content -->
    <div class="card-body elegant-color white-text rounded-bottom">
        <h4 class="card-title">{{ title }} <br> {{ points }}</h4>
        <hr class="hr-light">

        <div class="row">
            <div class="col-md-6">
                {% if premium_valid != false %}
                    <!-- Link -->
                    <a id="buyPremium" class="white-text d-flex justify-content-end" data-id="{{ id }}">
                        <h5>Comprar <i class="fas fa-angle-double-right"></i></h5>
                    </a>
                {% endif %}

            </div>
            <div class="col-md-6">
                <!-- Link -->
                <a href="{{ url }}" class="white-text d-flex justify-content-end">
                    <h5>Informate <i class="fas fa-angle-double-right"></i></h5>
                </a>
            </div>
        </div>
    </div>

</div>

{{ attach_library('admin_tests/admin_tests') }}